<?xml version="1.0"?>
<ruleset name="Ecomail FlexiBee HTTP client">
	<rule ref="vendor/pekral/phpcs-rules/ruleset.xml"/>
	<rule ref="SlevomatCodingStandard.Classes.ForbiddenPublicProperty.ForbiddenPublicProperty"/>
	<rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
		<properties>
			<property name="rootNamespaces" type="array">
				<element key="src" value="EcomailFlexibee"/>
				<element key="tests" value="EcomailFlexibeeTest"/>
